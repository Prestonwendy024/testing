{
  "name": "meridian-bank",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "description": "Modern banking application with professional website and React-based online banking platform",
  "main": "index.js",
  "scripts": {
    "dev": "vite",
    "dev:website": "vite --port 3000",
    "dev:app": "vite --port 3001",
    "build": "tsc && vite build",
    "build:website": "vite build --outDir dist-website",
    "build:app": "vite build --outDir dist-app",
    "preview": "vite preview",
    "preview:website": "vite preview --port 3000",
    "preview:app": "vite preview --port 3001",
    "setup": "node setup-database.js",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.50.2",
    "clsx": "^1.2.1",
    "dotenv": "^17.0.0",
    "lucide-react": "^0.263.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.8.1",
    "tailwind-merge": "^1.14.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.16",
    "eslint": "^8.55.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.3.6",
    "typescript": "^5.2.2",
    "vite": "^4.2.0"
  },
  "keywords": [
    "banking",
    "finance",
    "digital-banking",
    "meridian-bank",
    "react",
    "typescript"
  ],
  "author": "Meridian Bank",
  "license": "MIT"
}
